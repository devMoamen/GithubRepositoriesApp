<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KryptonicTest" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/blue_09</item>
        <item name="colorPrimaryDark">@color/blue_09</item>
        <item name="colorAccent">@color/gray_57</item>
    </style>

    <style name="Theme.KryptonicTest" parent="Base.Theme.KryptonicTest" />


    <style name="MaterialButtonIconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="BottomNavigationViewActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="BottomNavigationViewInActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>
</resources>